{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "VideoPOS",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": ".*",
        "execute": true,
        "sidecar": true,
        "scope": [
          { "name": "binaries/happytime-onvif-server-x64/OnvifServer.exe", "sidecar": true },
          { "name": "binaries/happytime-onvif-server-x64/happytime-rtsp-server/RtspServer.exe", "sidecar": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "VideoPOS",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/happytime-onvif-server-x64/OnvifServer.exe",
        "binaries/happytime-onvif-server-x64/happytime-rtsp-server/RtspServer.exe"
      ]
      
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "VideoPOS",
        "width": 800,
        "height": 600,
        "label": "main",
        "visible": false
      }
    ]
  }
}
